<!DOCTYPE html>
<html>
  <head>
    <title>Project01</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to "Home", root_path %>
      <% if @current_user.present? %>
        <%= link_to "All Events", events_path %>
        <%= link_to 'All Locatons', locations_path %>
        <%= link_to 'New Event', new_event_path %>
        <%= link_to 'New Location', new_location_path %>
        <%= link_to "Edit profile", edit_user_path %>
        <%= link_to "My Events", user_events_path(@current_user) %>
        <% if @current_user.admin? %>
          <%= link_to "All users", users_path %>
        <% end %>
        <%= image_tag @current_user.image, :class => 'thumb' if @current_user.image.present? %>
        <%= link_to "Logout #{ @current_user.email }", login_path, :method => 'delete' %>
      <% else %>
        <%= link_to "Sign up", new_user_path %>
        <%= link_to "Sign in", login_path %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
