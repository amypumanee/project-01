<h1>Log in</h1>

<p>
  <%= flash[:error_message] %>
</p>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'forn-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control' %>
  </div>

  <%= submit_tag "Sign in", :class => "btn btn-primary" %>

<% end %>
