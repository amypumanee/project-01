<h1>Log in</h1>

<p>
  <%= flash[:error_message] %>
</p>

<%= form_tag login_path do %>

  <%= label_tag :email %>
  <%= email_field_tag :email, nil, :class => 'forn-control' %>

  <%= label_tag :password %>
  <%= password_field_tag :password, nil, :class => 'form-control' %>

  <%= submit_tag "Sign in" %>

<% end %>
