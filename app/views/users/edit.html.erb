<h1>Update your profile</h1>
<div class="card text-white bg-secondary mb-3" style="max-width: 28rem;">
  <div class="card-body">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <div class="col-sm">
          <%= f.email_field :email, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <div class="col-sm">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :dob, "Date of birth" %>
        <div class="col-sm">
          <%= f.date_field :dob, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Mobile number" %>
        <div class="col-sm">
          <%= f.text_field :phone, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image %>
          <div class="col-sm">
            <%= f.cl_image_upload :image, :class => 'form-control' %>
          </div>
      </div>

      <%= f.submit "Update profile", :class => "btn btn-primary" %>
      <% end %>
  </div>
</div>
