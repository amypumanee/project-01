<h1>New User</h1>
<div class="card text-white bg-secondary mb-3" style="max-width: 28rem;">
  <div class="card-body">
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <div class="col-sm">
          <%= f.email_field :email, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <div class="col-sm">
          <%= f.password_field :password, :class => 'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <div class="col-sm">
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :image %>
          <div class="col-sm">
            <%= f.url_field :image, :class => 'form-control', :value => "https://cdn.pixabay.com/photo/2017/07/18/23/23/user-2517433_960_720.png" %>
          </div>
      </div>

      <%= f.submit "Sign up!", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>
