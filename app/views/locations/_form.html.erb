<div class="card text-white bg-secondary mb-3" style="max-width: 50rem;">
  <div class="card-body">
    <%= form_for @location do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => 'form-control'%>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.cl_image_upload :image, :required => true, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :event_id %>
        <%= f.select :event_id, Event.pluck(:title, :id), :include_blank => true, :class => 'form-control' %>
      </div>
      <%= f.submit "Update", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>
