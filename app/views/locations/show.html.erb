<h1><%= @location.name %></h1>

<%= image_tag @location.image, :class => 'feature' if @location.image.present? %>
<h3>More event in this area</h3>

<% @location.events.each do |event| %>
  <%= link_to image_tag(event.image, :class => 'thumb'), event %>
<% end %>

<div class="controls">
  <%= link_to "Edit location", edit_location_path(@location) %>
  <%= link_to "Delete location", @location, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
