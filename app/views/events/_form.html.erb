<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true, :required => true %>
  <%= f.label :date %>
  <%= f.text_field :start_date, :placeholder => 'DD-MM-YYYY, H:MM am' %>
  <%= f.label :end_date %>
  <%= f.text_field :end_date, :placeholder => 'DD-MM-YYYY, H:MM pm' %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :image %>
  <%= f.url_field :image %>
  <%= f.select :location_id, Location.pluck(:name, :id), :include_blank => true %>
  <%= f.submit %>
<% end %>
