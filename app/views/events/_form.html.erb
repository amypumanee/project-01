<div class="card text-white bg-secondary mb-3" style="max-width: 50rem;">
  <div class="card-body">
    <%= form_for @event, :html => {:multipart => true} do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, :autofocus => true, :required => true, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field :start_date, :placeholder => 'DD-MM-YYYY, H:MM am', :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :end_date %>
        <%= f.text_field :end_date, :placeholder => 'DD-MM-YYYY, H:MM pm', :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :info %>
        <%= f.text_field :info, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.cl_image_upload :image, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :location_id %>
        <%= f.select :location_id, Location.pluck(:name, :id), :include_blank => true, :class => 'form-control' %>
      </div>
      <%= f.submit "Update", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>
