<h1><%= @event.title %></h1>

<%= image_tag @event.image, :class => 'feature' if @event.image.present? %>
<h3>Details</h3>
<ul>
  <li>Title: <%= @event.title %></li>
  <% if @event.date.present? %>
    <li>Date: <%= @event.date.strftime '%a, %b %e %y' %></li>
  <% end %>
  <li>Address: <%= @event.address %></li>
  <% if @event.location.present? %>
  <li>Explore location: <%= link_to @event.location.name, @event.location %></li>
<% end %>
</ul>
<p><%= @event.info if @event.info.present?%></p>


<%= button_to "Attend this event", attend_event_path(@event), :method => 'post' %>

<% @event.users.each do |user| %>
  <p><%= image_tag user.image, :class => 'thumb' if user.image.present? %></p>
<% end %>


<div class="controls">
  <%= link_to "Edit event", edit_event_path(@event) %>
  <%= link_to "Delete event", @event, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
